
  <li class="list-group-item d-flex justify-content-between align-items-center">
    <div>
      <strong><%= user.username === username ? "Me" : user.username %></strong>
      <span class="badge bg-secondary ms-2"><%= user.user_type %></span>
    </div>
  
    <div class="btn-group" role="group">
      <form method="POST" action="/admin/update/<%= user._id %>" class="me-1">
        <input type="hidden" name="action" value="promote">
        <button type="submit" class="btn btn-sm btn-danger">Promote</button>
      </form>
      <form method="POST" action="/admin/update/<%= user._id %>">
        <input type="hidden" name="action" value="demote">
        <button type="submit" class="btn btn-sm btn-success">Demote</button>
      </form>
    </div>
  </li>
  